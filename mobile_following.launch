<launch>

 <group ns="scan_base">
  <node pkg="urg_node" type="urg_node" name="hokuyo_node_base" output="screen">
  <!--remap from="/scan_base/last" to="/base_scan"/-->
  <remap from="/scan_base/last" to="/scan"/>
  <param name="publish_multiecho" type="bool" value="false"/>
  <param name="ip_address" type="string" value="192.168.0.110"/>
  <!--param name="min_ang" type="double" value="-2.2689"/-->
  <!--param name="max_ang" type="double" value="2.2689"/-->
  <param name="publish_multiecho" type="bool" value="false"/>
  <param name = "angle_min" value = "-2.09"/>
  <param name = "angle_max" value = "2.09"/> 
  </node>
 </group>

 <node respawn="true" pkg="joy" type="joy_node" name="joystick" >
  <param name="dev" type="string" value="/dev/input/js0"/>
  <param name="deadzone" value="0.12" />
  </node>
  <param name="axis_linear" value="1" type="int"/>
  <param name="axis_angular" value="2" type="int"/>
  <param name="scale_linear" value="1" type="double"/>
  <param name="scale_angular" value="1" type="double"/>


  <!--node pkg="microstrain_3dmgx2_imu" type="imu_node" name="imu_node" output="screen"-->
   <!--param name="port" value="ttyUSB0"/--> 
 <!--/node-->  

 <!--node pkg="tf" type="static_transform_publisher" name="base2laser" args="0.195 0 0.15 0 0 0 base_link laser 100" /-->
  
  <node pkg="polar_to_cartesian" type="polar_to_cartesian" name="polar_to_cartesian" output="screen">
  </node>
  

 <include file="$(find rosaria)/launch/rosaria.launch" />
  
  
 
  <node pkg="tele_joy" type="tele_joy" name="tele_joy" output="screen">
  </node>
  
  
  <node pkg="sliding_autonomy" type="sliding_autonomy" name="sliding_autonomy" output="screen">
  </node>
  <node pkg="sliding_autonomy" type="motor_filter" name="motor_filter" output="screen">
  </node>
 
  
  <node pkg="arcleg_segmentation" type="arcleg_segmentation" name="arcleg_segmentation" output="screen">
  </node>
  <node pkg="track_ped" type="track_ped_ros.py" name="people_leg_tracker" output="screen">
    <param name="sampling_rate" value="40"/>
    <param name="max_id" value="32"/>
    <param name="cost_max_gating" value="0.8"/>
    <param name="person_gating_distance" value="0.4"/>
    <param name="decay_rate" value="0.97"/>
    <param name="limit_ppl_predict" value="0.13"/>
    <param name="use_limit_ppl_predict" value="False"/>
    <param name="rmahalanobis" value="2.0"/>
    <param name="use_odom" value="False"/>
    <param name="odom_topic" value="RosAria/pose"/>
  </node>



  <node pkg="pursuit" type="pursuit" name="pursuit" output="screen">
  </node>

  <node pkg="sliding_autonomy" type="status" name="status" output="screen">
  </node>

  
 
</launch>


